{% for section in sections %}
---
{% if section.layout %}
layout: {{ section.layout }}
{% endif %}
---

# {{ section.title }}

{% if section.content %}
{{ section.content }}
{% endif %}

{% if section.columns %}
<div class="grid grid-cols-{{ section.columns | length }} gap-8">
  {% for col in section.columns %}
  <div class="bg-white p-6 rounded-2xl shadow-lg border-t-4 border-{{ col.color | default(theme_color) }}-500">
    {% if col.title %}
    <h3 class="text-2xl font-bold mb-4 text-{{ col.color | default(theme_color) }}-700">
      {{ col.title }}
    </h3>
    {% endif %}
    {% if col.text %}
    <div class="mb-4 text-lg">
        {{ col.text }}
    </div>
    {% endif %}
    {% if col.list %}
    <ul class="list-disc list-inside space-y-2 text-lg">
      {% for item in col.list %}
      <li>{{ item }}</li>
      {% endfor %}
    </ul>
    {% endif %}
    {% if col.image %}
    <img src="{{ col.image }}" class="rounded-lg w-full object-cover mt-4" />
    {% endif %}
  </div>
  {% endfor %}
</div>
{% endif %}

{% if section.video %}
<VideoSegmentPlayer 
  videoId="{{ section.video.id }}"
  :phaseData="{{ section.video.phases }}"
  {% if section.video.columns %}:columns="{{ section.video.columns }}"{% endif %}
/>
{% endif %}

{% if section.comparison %}
<div class="bg-white p-6 rounded-xl shadow-lg overflow-x-auto">
  <table class="w-full text-sm">
    <thead class="bg-slate-100">
      <tr>
        <th class="p-3 text-left">êµ¬ë¶„</th>
        {% for header in section.comparison.headers %}
        <th class="p-3 text-center text-{{ header.color }}-600">{{ header.text }}</th>
        {% endfor %}
      </tr>
    </thead>
    <tbody class="text-center">
      {% for row in section.comparison.rows %}
      <tr class="border-b last:border-b-0">
        <td class="p-3 font-bold text-left bg-slate-50">{{ row.label }}</td>
        {% for cell in row.cells %}
        <td class="p-3">{{ cell }}</td>
        {% endfor %}
      </tr>
      {% endfor %}
    </tbody>
  </table>
</div>
{% endif %}

{% endfor %}

